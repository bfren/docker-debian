#!/bin/bash

set -euo pipefail


#======================================================================================================================
# Output image version.
#======================================================================================================================

busybox printf "bfren | %s" `cat /BF_IMAGE` | figlet
bf-echo "bfren `cat /BF_IMAGE` v`cat /BF_VERSION` (debian/`cat /BF_DEBIAN`)" "bf-image"
bf-echo "https://github.com/bfren/docker-`cat /BF_IMAGE`" "bf-image"
