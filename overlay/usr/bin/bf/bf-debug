#!/bin/sh

set -euo pipefail


#======================================================================================================================
# Echo debug message in grey if BF_DEBUG flag is set - otherwise do nothing.
#
# Arguments
#   1   Text to echo
#   2   Script / executable name (optional)
#======================================================================================================================

if [ "${BF_DEBUG-}" = "1" ] ; then
    GREY="\e[1;30m"
    OUTPUT=$(bf-e "bf" "${GREY}" "${1-}" "${2-}") # capture output so the whole thing can be output in grey
    echo -e "${GREY}${OUTPUT}"
fi
