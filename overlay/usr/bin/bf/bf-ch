#!/bin/bash

set -euo pipefail


#======================================================================================================================
# Executable usage.
#======================================================================================================================

usage () {
    busybox echo "Usage: `busybox basename ${0}` [-o|-m] [-t f|d] [-r] FILE_OR_DIRECTORY_GLOB" 2>&1
    busybox echo
    busybox echo "Set change action:"
    busybox echo "    -o    Use chown: Set ownership to this user / group."
    busybox echo "    -m    Use chmod: Set permissions to this mode."
    busybox echo
    busybox echo "Additional optional arguments:"
    busybox echo "    -t    Only apply to matching files (f) or directories (d)."
    busybox echo "    -r    If type is not specified, adds -R to recurse."
    busybox echo
    busybox echo "Usage:"
    busybox echo "    -h    Show this usage message."
    exit 2
}

while getopts ":hm:o:t:r" C ; do
    case ${C} in
        h) usage ;;
        m) MODE="${OPTARG}" ;;
        o) OWNER="${OPTARG}" ;;
        t) TYPE="${OPTARG}" ;;
        r) RECURSE=1 ;;
        ?) bf-notok "Invalid option: -${OPTARG}" "bf-ch" && usage ;;
    esac
done

shift $(($OPTIND -1))

GLOB="${1-}"
[[ -z "${GLOB-}" ]] && bf-error "You must provide the path of the file or directory to change." "bf-ch"
[[ -z "${OWNER-}" ]] && [[ -z "${MODE-}" ]] && bf-error "You must use either -o or -m." "bf-ch"


#======================================================================================================================
# Run chown.
#======================================================================================================================

if [ -n "${OWNER-}" ] ; then

    bf-debug "Applying chown ${OWNER} to ${GLOB}." "bf-ch"

    if [ "${RECURSE-}" = "1" ] ; then
        bf-debug " .. recursively." "bf-ch"
        busybox chown -R ${OWNER} ${GLOB}
    else
        [[ -n "${TYPE-}" ]] && bf-debug " .. type ${TYPE}." "bf-ch"
        case "${TYPE-}" in
            f|d) busybox find ${GLOB} -type ${TYPE} -exec busybox chown ${OWNER} {} + ;;
            *) busybox chown ${OWNER} ${GLOB} ;;
        esac
    fi

fi


#======================================================================================================================
# Run chmod.
#======================================================================================================================

if [ -n "${MODE-}" ] ; then

    bf-debug "Applying chmod ${MODE} to ${GLOB}." "bf-ch"

    if [ "${RECURSE-}" = "1" ] ; then
        bf-debug " .. recursively." "bf-ch"
        chmod -R ${MODE} ${GLOB}
    else
        [[ -n "${TYPE-}" ]] && bf-debug " .. type ${TYPE}." "bf-ch"
        case "${TYPE-}" in
            f|d) find ${GLOB} -type ${TYPE} -exec chmod ${MODE} {} + ;;
            *) chmod ${MODE} ${GLOB} ;;
        esac
    fi

fi
