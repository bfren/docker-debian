#!/bin/bash

set -euo pipefail
export BF_E=`basename ${0}`


#======================================================================================================================
# Install packages.
#======================================================================================================================

apt update && apt install -y --no-install-recommends \
    busybox

busybox --install


#======================================================================================================================
# Set timezone.
#======================================================================================================================

bf-tz "Europe/London"


#======================================================================================================================
# Cleanup.
#======================================================================================================================

bf-echo "Removing .empty files..."
rm /.empty
rm /etc/bf/init.d/.empty
rm /etc/bf/src/.empty
rm /etc/bf/templates/.empty
rm /usr/lib/bf/inc/.empty
bf-done
