#!/bin/bash

set -euo pipefail
export BF_E=`basename ${0}`


#======================================================================================================================
# Install packages.
#======================================================================================================================

UNSTABLE=/etc/apt/sources.list.d/unstable
echo "deb http://deb.debian.org/debian unstable main" > ${UNSTABLE}

apt update && apt install -y --no-install-recommends \
    busybox/unstable

busybox --install

rm ${UNSTABLE}


#======================================================================================================================
# Set timezone.
#======================================================================================================================

bf-tz "Europe/London"


#======================================================================================================================
# Cleanup.
#======================================================================================================================

bf-echo "Removing .empty files..."
rm /.empty
rm /etc/bf/init.d/.empty
rm /etc/bf/src/.empty
rm /etc/bf/templates/.empty
rm /usr/lib/bf/inc/.empty
bf-done
