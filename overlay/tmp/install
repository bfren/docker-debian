#!/bin/bash

set -euo pipefail
export BF_E=`basename ${0}`


#======================================================================================================================
# Remove pre-existing busybox executables, and replace with busybox.
#======================================================================================================================

X=(`busybox --list`)
for A in ${X[@]} ; do

    cd /usr/bin
    [[ -f "${A}" ]] && rm -f ${A}

done

busybox --install


#======================================================================================================================
# Set timezone.
#======================================================================================================================

bf-tz "Europe/London"
