#!/bin/bash

set -euo pipefail
export BF_E=`basename ${0}`


#======================================================================================================================
# Upgrade system packages.
#======================================================================================================================

bf-echo "Upgrading system packages..."
apt update && apt upgrade -y
bf-done


#======================================================================================================================
# Add additional packages.
#======================================================================================================================

bf-echo "Adding additional packages..."
apt update && apt install -y \
    ca-certificates \
    figlet \
    openssl
bf-done


#======================================================================================================================
# Set timezone.
#======================================================================================================================

bf-tz "Europe/London"


#======================================================================================================================
# Cleanup.
#======================================================================================================================

bf-echo "Cleaning up caches and unnecessary directories..."
bf-rmrf /var/lib/apt/lists/*
bf-rmrf /usr/share/man
bf-done
